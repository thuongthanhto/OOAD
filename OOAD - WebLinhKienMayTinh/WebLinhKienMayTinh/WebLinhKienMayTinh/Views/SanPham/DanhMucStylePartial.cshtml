@using WebLinhKienMayTinh.Models

@{
    var listSanPham = ViewBag.lstSanPham as IEnumerable<SanPham>;
    //var listSanPham2 = ViewBag.lstSanPham2 as IEnumerable<SanPham>;
}
<div class=" rsidebar span_1_of_left">
    <div class="of-left">
        <h3 class="cate">Phân loại</h3>
    </div>
    <ul class="menu">

        @foreach (var groupItem in listSanPham.GroupBy(n => n.LoaiSanPham))
        {
            <li class="item1">
                @if (groupItem != null)
                {
                    <a href="#">@groupItem.Key.TenLoai</a>
                    <ul class="cute" style="display: none;">
                        @foreach (var item in groupItem.GroupBy(n => n.NhaSanXuat))
                        {
                            if (item.Key != null)
                            {
                                <li class="subitem1">
                                    <a href="@Url.Action("SanPham", "SanPham", new {@MaLoaiSP = groupItem.Key.MaLoaiSP, @MaNSX = item.Key.MaNSX})">@item.Key.TenNSX</a>
                                </li>
                            }
                        }
                    </ul>
                }
            </li>
        }
    </ul>
</div> <!--initiate accordion-->

<script type="text/javascript">
    $(function () {
        var menu_ul = $('.menu > li > ul'),
               menu_a = $('.menu > li > a');
        menu_ul.hide();
        menu_a.click(function (e) {
            e.preventDefault();
            if (!$(this).hasClass('active')) {
                menu_a.removeClass('active');
                menu_ul.filter(':visible').slideUp('normal');
                $(this).addClass('active').next().stop(true, true).slideDown('normal');
            } else {
                $(this).removeClass('active');
                $(this).next().stop(true, true).slideUp('normal');
            }
        });

    });
</script>
