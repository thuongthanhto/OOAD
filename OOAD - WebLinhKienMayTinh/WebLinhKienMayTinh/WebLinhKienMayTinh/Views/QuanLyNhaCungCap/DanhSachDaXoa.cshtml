@using WebLinhKienMayTinh.Models;
@model IEnumerable<NhaCungCap>
@{
    ViewBag.Title = "DanhSachDaXoa";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}
<h2>Danh sách nhà cung cấp đã xóa</h2>
<br /><br />
@*Thể hiện dữ liệu thông qua control webgrid*@
@grid.GetHtml(
    tableStyle: "table divTable table-bordered",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaNCC", "Mã NCC"),
    grid.Column("TenNCC", "Tên NCC"),
    grid.Column("DiaChi", "Địa chỉ"),
    grid.Column("Email", "Email"),
    grid.Column(format: p => @Html.ActionLink("Hoàn tác", "HoanTac", new { id = p.MaNCC }, new { @class = "btn btn-success" }))
    ))

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
        text-align: left;
    }

        .divTable td {
        }

    .gridHead {
        background-color: #4CAF50;
    }

        .gridHead > th > a {
            color: #fff;
        }

        .gridHead > th {
            color: #fff;
            text-align: center;
        }

    .gridFooter {
        font-weight: bold;
        color: red;
    }
</style>