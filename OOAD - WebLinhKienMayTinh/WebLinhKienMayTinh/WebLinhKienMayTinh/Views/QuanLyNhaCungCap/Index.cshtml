@using WebLinhKienMayTinh.Models;
@model IEnumerable<NhaCungCap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
    //Khởi tạo control webgrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 10);
}
@Html.ActionLink("Thêm nhà cung cấp", "TaoMoi", null, new { @class = "btn btn-success" })
@Html.ActionLink("Danh sách nhà cung cấp đã xóa", "DanhSachDaXoa", null, new { @class = "btn btn-success" })
<br /><br />
@*Thể hiện dữ liệu thông qua control webgrid*@
@grid.GetHtml(
    tableStyle: "table divTable table-bordered",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaNCC", "Mã NCC"),
    grid.Column("TenNCC", "Tên NCC"),
    grid.Column("DiaChi", "Địa chỉ"),
    grid.Column("Email", "Email"),
    grid.Column(format: p => @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { id = p.MaNCC }, new { @class = "btn btn-success" })),
    grid.Column(format: p => @Html.ActionLink("Xóa", "Xoa", new { id = p.MaNCC }, new { @class = "btn btn-danger" }))
    ))


@*Css cho từng Style của table*@
<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
        text-align: left;
    }

        .divTable td {
        }

    .gridHead {
        background-color: #4CAF50;
    }

        .gridHead > th > a {
            color: #fff;
        }

        .gridHead > th {
            color: #fff;
            text-align: center;
        }

    .gridFooter {
        font-weight: bold;
        color: red;
    }
</style>

