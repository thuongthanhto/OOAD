@model IEnumerable<WebLinhKienMayTinh.Models.KhachHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Layout/AdminLayout.cshtml";

    // Khởi tạo control WebGrid
    WebGrid grid = new WebGrid(source: Model, rowsPerPage: 5);
}
<h1>Danh sách khách hàng</h1>
<br /><br />
@*Thể hiện dữ liệu thông qua control webGrid*@
@grid.GetHtml(
    tableStyle: "table divTable table-bordered",
    headerStyle: "gridHead",
    footerStyle: "gridFooter",
    rowStyle: "gridRow",
    alternatingRowStyle: "gridAltRow",
    columns: grid.Columns(
    grid.Column("MaKH", "Mã khách hàng"),
    grid.Column("TenKH", "Tên khách hàng"),
    grid.Column("DiaChi", "Địa chỉ"),
    grid.Column("Email", "Email"),
    grid.Column("SoDienThoai", "Số điện thoại")
    ))

@*Css cho từng Style của table*@
<style>
    .divTable {
        width: 100%;
        border: 1px solid #999999;
        text-align: center;
    }

        .divTable td {
        }

    .gridHead {
        background-color: #4CAF50;
    }

        .gridHead > th > a {
            color: #fff;
        }

        .gridHead > th {
            color: #fff;
            text-align: center;
        }

    .gridFooter {
        font-weight: bold;
        color: red;
    }
</style>