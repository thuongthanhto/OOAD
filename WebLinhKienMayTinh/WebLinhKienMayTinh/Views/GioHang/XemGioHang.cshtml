@model List<WebLinhKienMayTinh.Models.ItemGioHang>

@{
    ViewBag.Title = "XemGioHang";
    Layout = "~/Views/Layout/ProductLayout.cshtml";
}
<div class="container">
    
    @if (Model == null || Model.Count == 0)
    {
        <h1 style="color: #000;">Giỏ hàng rổng!</h1>
    }
    else
    {
        <table class="table" style="text-align: center;">
            <tr style="background-color: #4CAF50; color: white;">
                <td>Mã SP</td>
                <td>Tên SP</td>
                <td>Hình ảnh</td>
                <td>Đơn giá</td>
                <td>Số lượng</td>
                <td>Thành tiền</td>
                <td></td>
            </tr>
            @foreach (var item in Model)
            {
                <tr style="background-color: #f2f2f2;">
                    <td>@item.MaSP</td>
                    <td>@item.TenSP</td>
                    <td><img src="@Url.Content("~/Content/images/sanpham/" + item.HinhAnh)" width="100" height="100" /></td>
                    <td>@item.SoLuong</td>
                    <td>@item.DonGia.ToString("#,##") VNĐ</td>
                    <td>@item.ThanhTien.ToString("#,##") VNĐ</td>
                    <td>
                        @Html.ActionLink("Sửa", "SuaGioHang", new { @MaSP = item.MaSP }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("Xóa", "XoaGioHang", new { @MaSP = item.MaSP }, new { @class = "btn btn-danger" })
                    </td>

                </tr>

            }
        </table>

        <br/>
        <br/>
        using (Html.BeginForm("DatHang", "GioHang"))
        {
            if (Session["TaiKhoan"] == null)
            {
                @*Thiết kế form lưu thông tin khách hàng đối với vãng lai (Khách chưa có tài khoản)*@
                <div class="clearfix"></div>
                <br/>
                <div><h2 style="text-align: center;">Thông tin khách hàng</h2></div>
                <br/>
                <div>
                    <div class="form-group">
                        <label for="TenKH">Họ Tên:</label>
                        <input type="text" class="form-control" id="TenKH">
                        <p style="color: red;" id="TB_TenKH"></p>
                    </div>
                    <div class="form-group">
                        <label for="DiaChi">Địa chỉ:</label>
                        <textarea class="form-control" rows="5" id="DiaChi"></textarea>
                        <p style="color: red;" id="TB_DiaChi"></p>
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        <input type="text" class="form-control" id="Email">
                        <p style="color: red;" id="TB_Email"></p>
                    </div>
                    <div class="form-group">
                        <label for="SoDienThoai">Số điện thoại:</label>
                        <input type="text" class="form-control" id="SoDienThoai">
                        <p style="color: red;" id="TB_Sdt"></p>
                    </div>
                    
                    @*Kiểm validation thông qua jquery*@
                    <script>
                        $(document)
                            .ready(function() {
                                $("#btnDatHang").click(function () {
                                    var loi = 0;
                                    if ($("#TenKH").val() == "") {
                                        $("#TB_TenKH").text("Tên khách hàng không được bỏ trống");
                                        loi++;
                                    } else {
                                        $("#TB_TenKH").text("");
                                    }
                                    if ($("#SoDienThoai").val() == "") {
                                        $("#TB_Sdt").text("Số điện thoại không được bỏ trống");
                                        loi++;
                                    } else {
                                        $("#TB_Sdt").text("");
                                    }

                                    if ($("#DiaChi").val() == "") {
                                        $("#TB_DiaChi").text("Địa chỉ không được bỏ trống");
                                        loi++;
                                    } else {
                                        $("#TB_DiaChi").text("");
                                    }
                                    var loi;
                                    dinhdang = /^[0-9A-Za-z]+[0-9A-Za-z_]*@@[\w\d.]+\.\w{2,4}$/;
                                    KTemail = dinhdang.test($('#Email').val());
                                    if (!KTemail) {
                                        $('#TB_Email').text("Email không hợp lệ !");
                                        loi++;
                                    }
                                    if (loi != 0) {
                                        //Ngăn sự kiện submit đến server
                                        return false;
                                    }

                                });
                            });
                    </script>
                </div>
            }
            <div class="divDatHang" style="text-align: right;">
                <input type="submit" value="Đặt hàng" class="btn btn-danger" id="btnDatHang"/>
                <a href="@Url.Action("Index","Home")" class="btn btn-success">Mua tiếp</a>
            </div>
        }


    }
    

</div>

